@using Aciktim.Models
@model List<Restaurant>
@{
    Layout = "_Layout";
}

<div class="container-fluid pt-4 px-4">
    <div class="col-12">
        <div class="bg-secondary rounded h-100 p-4">
            <h6 class="mb-4">Restorantlar</h6>
            <div class="row mb-0">
                @foreach (Restaurant r in Model)
                {
                    <a href="/Client/Restaurant/Index/@r.RestaurantId/@ViewBag.id">
                        <div class="bg-secondary rounded d-flex align-items-center justify-content-between p-4">
                            @if (r.Image == null)
                            {
                                <div class="col-sm-4"><img class="img-fluid mx-auto mb-4" src="~/img/default.jpg" style="height: 100px;"></div>
                            }
                            else
                            {
                                <div class="col-sm-4">@r.Image</div>
                            }
                            <span class="col-sm-4">@r.RestaurantName</span>
                        </div>
                    </a>
                    <hr class="dropdown-divider">
                }
            </div>
        </div>
    </div>
</div>
